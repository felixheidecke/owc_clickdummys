mixin share()
    #share.share

        .uk-grid-small.uk-flex-middle(uk-grid)
            .uk-width-auto
                span(uk-icon="icon: folder; ratio: 2")

            .uk-width-expand
                h3.uk-card-title.uk-margin-remove-bottom My little folder
                p.uk-margin-remove-top
                    span.uk-text-meta Size:&nbsp;
                    span.uk-text-small 132 MB
                    span.uk-text-meta , &nbsp;created:&nbsp;
                    span.uk-text-small 10 days ago

        ul.uk-tab.uk-child-width-expand(js-tab)
            for i in ["Activities", "Comments", "Sharing"]
                li.share--tab
                    a(href="#") #{i}

        .uk-grid(js-entrypoint)
            div.uk-width-expand
                button.uk-button.uk-button-primary.uk-button-small.uk-align-right.uk-margin(js-button="addBox") Add public link

        .uk-card.uk-card-default.uk-card-small.uk-margin(js-box="template")
            .uk-card-header(js-card-header)
                .uk-grid-small.uk-flex-middle(uk-grid)
                    .uk-width-auto
                        span.uk-icon-button(uk-icon="icon: link")

                    .uk-width-expand
                        h3.uk-card-title.uk-margin-remove-bottom(js-card-title) 981jcj1m
                        p.uk-text-meta.uk-margin-remove-top(js-public-link) http://short.link/981jcj1m

            .uk-card-body('js-card-body')
                form('js-form')
                    fieldset.uk-fieldset
                        .uk-form-controls
                            label
                                input.uk-checkbox(type="checkbox")
                                | &nbsp;&nbsp;Allow uploads

                        .uk-margin
                            label.uk-form-label(for="password")
                                | Password

                            .uk-inline.uk-width-1-1
                                span.uk-form-icon.uk-form-icon-flip(uk-icon="icon: lock")
                                input.uk-input(js-input="password", type="password", placeholder="(optional)")

                        .uk-margin
                            label.uk-form-label(for="expiration")
                                | Expiration date
                                em *

                            .uk-inline.uk-inline.uk-width-1-1
                                span.uk-form-icon.uk-form-icon-flip(uk-icon="icon: calendar")
                                input.uk-input(js-input="expiration", type="date", placeholder="dd.mm.yyyy", required)

                    .uk-grid
                        div.uk-width-expand
                            button(js-button="remove", uk-toggle="target: #delete-box").uk-button.uk-button-small.uk-button-default Delete

                        div.uk-width-expand.uk-text-right
                            button(js-button="close").uk-button.uk-button-small.uk-button-default.uk-margin-small-right Close
                            button(js-button="save" data-message="Saved" data-status="success").uk-button.uk-button-small.uk-button-primary Save

            .uk-card-footer(js-footer)
                p(js-share-via)
                    a.uk-icon-link.uk-margin-small-right(uk-icon="icon: facebook", href="#")
                    a.uk-icon-link.uk-margin-small-right(uk-icon="icon: twitter", href="#")
                    a.uk-icon-link.uk-margin-small-right(uk-icon="icon: mail", href="#" uk-toggle="target: #send-mail")

                .uk-grid(js-history)
                    p.uk-text-meta
                        span(js-history=1 hidden)
                            span &bull; Send to&nbsp;
                            span.uk-text-bold max@mustermann.de <br>
                        span(js-history=0)
                            span &bull; Create on&nbsp;
                            span.uk-text-bold Feb. 09 2017 <br>

    #delete-box(uk-modal)
        .uk-modal-dialog
            .uk-modal-header
                h2.uk-modal-title Delete public link?

            .uk-modal-body
                p Are you sure you want to delete this link?

            .uk-modal-footer
                .uk-grid
                    div.uk-width-expand
                        button(js-button="delete").uk-button.uk-button-small.uk-button-default.uk-modal-close Cancel

                    div.uk-width-expand
                        button(js-button="cancel").uk-button.uk-button-small.uk-button-danger.uk-align-right.uk-modal-close Delete

    #send-mail(uk-modal)
        .uk-modal-dialog
            .uk-modal-header
                h3.uk-h3 Send Public link via mail

            .uk-modal-body
                .uk-margin
                    label.uk-form-label(for="email")
                        | Send to
                        em *

                    .uk-inline.uk-inline.uk-width-1-1
                        span.uk-form-icon.uk-form-icon-flip(uk-icon="icon: mail")
                        input.uk-input(js-input="mail", type="mail", placeholder="max@mustermann.de", required)
                .uk-margin
                    label.uk-form-label(for="mailtext") Message
                    textarea.uk-textarea(js-input="mailtext" rows="5" placeholder="(optional)")
                p.uk-text-meta
                    i The email will contain the link, password and expiration-date (if set)
                button(js-button="cancel").uk-button.uk-button-small.uk-button-default.uk-modal-close Cancel
                button(js-button="send").uk-button.uk-button-small.uk-button-primary.uk-align-right.uk-modal-close Send