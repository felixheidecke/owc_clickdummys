mixin share()
    #share.share
        .share--header
            span(uk-icon="icon: ckeck") Foldername
        ul.uk-tab.uk-child-width-expand(js-tab)
            for i in ["Activities", "Comments", "Sharing"]
                li.share--tab
                    a(href="#") #{i}
        .uk-grid(js-entrypoint)
            div.uk-width-expand
                button.uk-button.uk-button-primary.uk-button-small.uk-align-right.uk-margin(js-button="addBox") Add public link
        .uk-card.uk-card-default.uk-card-small.uk-margin(js-box="template")
            .uk-card-header(js-card-header)
                .uk-grid-small.uk-flex-middle(uk-grid)
                    .uk-width-auto
                        span.uk-icon-button(uk-icon="icon: link")
                    .uk-width-expand
                        h3.uk-card-title.uk-margin-remove-bottom(js-card-title) 981jcj1m
                        p.uk-text-meta.uk-margin-remove-top(js-public-link) http://short.link/981jcj1m
            .uk-card-body('js-card-body')
                form.uk-form-stacked('js-form')
                    div
                        .uk-form-controls
                            label
                                input.uk-checkbox(type="checkbox")
                                | &nbsp;&nbsp;Allow uploads
                    .uk-margin
                        label.uk-form-label(for="password")
                            | Password
                        .uk-inline
                            span.uk-form-icon(uk-icon="icon: lock")
                            input.uk-input(js-input="password", type="password", placeholder="optional Password")
                    .uk-margin
                        label.uk-form-label(for="expiration")
                            | Expiration date
                            em *
                        .uk-inline
                            span.uk-form-icon(uk-icon="icon: calendar")
                            input.uk-input(js-input="expiration", type="date", required)
                    .uk-margin
                        label.uk-form-label(for="sendmail")
                            | Send link via email
                        .uk-inline
                            span.uk-form-icon(uk-icon="icon: mail")
                            input.uk-input(js-input="sendmail", type="email", placeholder="optional")
                .uk-grid(js-history)
                    p.uk-text-small &bull; Create on&nbsp;
                        span.uk-text-bold Feb. 09 2017 <br>
                        span &bull; Send to&nbsp;
                        span.uk-text-bold max@mustermann.de <br>
                .uk-grid
                    div.uk-width-expand
                        button(js-button="cancel").uk-button.uk-button-small.uk-button-default Cancel
                        button(js-button="remove", uk-toggle="target: #delete-box", style="display:none").uk-button.uk-button-small.uk-button-default remove
                    div.uk-width-expand
                        button(js-button="save").uk-button.uk-button-small.uk-button-primary.uk-align-right Save
    #delete-box(uk-modal)
        .uk-modal-dialog
            .uk-modal-header
                h2.uk-modal-title Delete public link?
            .uk-modal-body
                p Are you sure you want to delete this link?
            .uk-modal-footer
                .uk-grid
                    div.uk-width-expand
                        button(js-button="delete").uk-button.uk-button-small.uk-button-default.uk-modal-close Cancel
                    div.uk-width-expand
                        button(js-button="cancel").uk-button.uk-button-small.uk-button-danger.uk-align-right.uk-modal-close Delete